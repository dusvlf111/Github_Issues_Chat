{
  "name": "github-issues-chat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "GitHub Issues를 활용한 PWA 채팅 앱",
  "keywords": [
    "react",
    "typescript",
    "pwa",
    "github",
    "chat",
    "issues"
  ],
  "homepage": "https://dusvlf111.github.io/Github_Issues_Chat/",
  "repository": {
    "type": "git",
    "url": "https://github.com/dusvlf111/Github_Issues_Chat.git"
  },
  "bugs": {
    "url": "https://github.com/dusvlf111/Github_Issues_Chat/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:force": "npm run build && gh-pages -d dist -f",
    "clean": "rm -rf dist node_modules/.vite",
    "test:build": "npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.1.0",
    "globals": "^14.0.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
